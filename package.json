    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "tsdx build && size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16",
    "react-three-fiber": ">=5.0",
