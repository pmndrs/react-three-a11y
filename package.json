{
  "name": "@react-three/a11y",
  "version": "1.0.0",
  "description": "ðŸ‘©â€ðŸ¦¯ Provide accessibility support to R3F such as focus indication, keyboard tab index, and screen reader support",
  "keywords": [
    "a11y",
    "accessibility",
    "three",
    "react",
    "react-three-fiber"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pmndrs/react-three-a11y.git"
