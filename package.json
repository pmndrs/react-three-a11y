    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-three-fiber": "5.3.11",
    "size-limit": "^4.9.1",
    "three": "0.124.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.1.3"
